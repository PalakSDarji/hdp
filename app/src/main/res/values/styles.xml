<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">@null</item>

    </style>

    <style name="Theme.MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_EditTextStyle_Login">
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="App_ButtonStyle_Login">
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/login_button_textsize</item>
        <item name="android:background">@drawable/rounded_login</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/pink_text</item>
        <item name="android:layout_marginBottom">@dimen/login_button_margin_bottom</item>
    </style>

    <style name="App_EditTextStyle_SiginUp">
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textSize">@dimen/pref_card_title_size</item>
        <item name="android:layout_marginBottom">@dimen/signup_edittext_margin_bottom</item>
        <item name="android:background">@drawable/rounded_edittext_signup</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/edittexthintcolorsignup</item>
        <item name="android:textColorHint">@color/edittexthintcolorsignup</item>
    </style>

    <style name="editTextTheme" parent="AppTheme">
        <item name="colorControlNormal">#d2d2d2</item>
        <item name="colorControlActivated">#d2d2d2</item>
        <item name="colorControlHighlight">#ffbb00</item>
    </style>


    <style name="App_EditTextStyle_Search">

        <item name="android:textSize">@dimen/tab_search_textsize</item>
        <item name="android:layout_marginBottom">@dimen/card_padding_top</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/pink</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/pink</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/edittextborder</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

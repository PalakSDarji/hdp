<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_edge"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_caard"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llControls"
                android:layout_alignParentTop="true"
                android:background="@drawable/card_top"
                android:scaleType="centerCrop"
                android:src="@drawable/customl" />
            <!--
                    </com.github.captain_miao.optroundcardview.OptRoundCardView>
            -->

            <LinearLayout
                android:id="@+id/llControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="35"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layouttop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/layouttop1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:id="@+id/llActivityName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:layout_width="@dimen/value_20"
                                android:layout_height="@dimen/value_20"
                                android:layout_gravity="center"
                                android:src="@drawable/movie"/>

                            <com.hadippa.BoldTextView
                                android:id="@+id/tvActivityName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Sarabjit Movie"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/pink_text"
                                android:textSize="@dimen/card_title_textsize" />

                        </LinearLayout>

                     <!--   <com.hadippa.BoldTextView
                            android:id="@+id/tvActivityName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/movie"
                            android:drawablePadding="10dp"
                            android:text="Sarabjit Movie"
                            android:textColor="@color/pink_text"
                            android:textSize="@dimen/card_title_textsize"
                            android:textStyle="bold" />
-->

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/red_down"
                            android:drawablePadding="5dp"
                            android:text="100"
                            android:textColor="@color/subText"
                            android:textSize="@dimen/card_title1_textsize" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layouttop1"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/card_event_margin_bottom"
                        android:layout_marginTop="@dimen/login_button_margin_bottom"
                        android:drawableLeft="@drawable/landing_pages_address_icon"
                        android:drawablePadding="5dp"
                        android:text="PVR Cinemas, Lower Parel, Mumbai"
                        android:textColor="@color/subText"
                        android:textSize="@dimen/card_title1_textsize" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llActivityDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/value_20"
                            android:layout_height="@dimen/value_20"
                            android:layout_gravity="center"
                            android:src="@drawable/cal"/>

                        <TextView
                            android:id="@+id/tvActivityDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="04 May"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/tab_search_textsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llActivtyTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/value_20"
                            android:layout_height="@dimen/value_20"
                            android:layout_gravity="center"
                            android:src="@drawable/clock"/>

                        <TextView
                            android:id="@+id/tvActivtyTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="12.15 pm"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/tab_search_textsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llDistance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/value_20"
                            android:layout_height="@dimen/value_20"
                            android:layout_gravity="center"
                            android:src="@drawable/loc"/>

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="10 Km"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/tab_search_textsize" />

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/llGoing"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="@dimen/value_20"
                            android:layout_height="@dimen/value_20"
                            android:layout_gravity="center"
                            android:src="@drawable/people"/>

                        <TextView
                            android:id="@+id/tvGoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="10 Going"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/tab_search_textsize" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/card_view_margin_vertical"
                    android:background="#efefef"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/card_event_margin_bottom">

                    <TextView
                        android:id="@+id/tvName_Age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Maria Sharopava, 29"
                        android:textSize="@dimen/card_bottom_text_size"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="FOLLOWLING"

                        android:textSize="@dimen/or_text_size">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

   <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rounded_caard" />

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:background="@drawable/like" />

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:alpha="0"
        android:background="@drawable/nope" />


</FrameLayout>
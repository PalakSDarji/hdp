<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_eaeaea"/>

    <com.hadippa.CustomTextView
        android:id="@+id/goingWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/value_h15"
        android:paddingLeft="@dimen/value_w26"
        android:paddingTop="@dimen/value_h21"
        android:text="You are going with Tina Gupta for Sarabjit movie"
        android:textColor="@color/c_969495"
        android:textSize="@dimen/values_txt_12"
        app:customFont="@string/proxima_reg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c_eaeaea"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sign_up_padding"
        android:paddingRight="@dimen/sign_up_padding"
        android:paddingTop="@dimen/sign_up_padding">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profileImage"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/value_w130"
            android:layout_height="@dimen/value_w130"
            android:layout_marginRight="@dimen/tab_search_textsize"
            android:background="@drawable/profile_bg"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avatar1"
            app:riv_border_color="@color/c_b7b3b4"
            app:riv_border_width="@dimen/value_1"
            app:riv_corner_radius="@dimen/value_10"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layouttop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/layouttop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_toLeftOf="@+id/ivCountIcon"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="Sania Mirza, 29"
                        android:textColor="@color/c_6b696a"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_bold"/>


                    <ImageView
                        android:id="@+id/ivActivityIcon"
                        android:layout_width="@dimen/value_w24"
                        android:layout_height="@dimen/value_w24"
                        android:layout_below="@+id/tvPersonName"
                        android:layout_marginTop="@dimen/value_2"
                        android:src="@drawable/landing_pages_movie_icon"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/activityname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPersonName"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toLeftOf="@+id/ivCountIcon"
                        android:layout_toRightOf="@+id/ivActivityIcon"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Sarabjit Movie"
                        android:textColor="@color/pink_text"
                        android:textSize="@dimen/values_txt_13"
                        app:customFont="@string/proxima_bold"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/activityname"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/ivActivityIcon"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="PVR Cinemas, Lower Parel, Mumbai"
                        android:textColor="@color/c_555555"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                    <ImageView
                        android:id="@+id/ivCountIcon"
                        android:layout_width="@dimen/value_w24"
                        android:layout_height="@dimen/value_w24"
                        android:layout_toLeftOf="@+id/tvCount"
                        android:src="@drawable/landing_pages_share"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/ivMore"
                        android:text="100"
                        android:textColor="@color/c_8f8f8f"
                        android:textSize="@dimen/values_txt_11"
                        app:customFont="@string/proxima_reg"/>

                    <ImageView
                        android:id="@+id/ivMore"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:paddingBottom="3dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:src="@drawable/ic_header_right_overflow"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_padding_side"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/value_w26"
                        android:layout_height="@dimen/value_w26"
                        android:src="@drawable/landing_pages_r2_29"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvActivityDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="04 Mayasd"
                        android:textColor="@color/c_908e8f"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/value_w26"
                        android:layout_height="@dimen/value_w26"
                        android:src="@drawable/landing_pages_time"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvActivityTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="12.15 pm"
                        android:textColor="@color/c_908e8f"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llGoing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/value_w40"
                        android:layout_height="@dimen/value_w26"
                        android:src="@drawable/landing_pages_people"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvGoing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="10 Going"
                        android:textColor="@color/c_908e8f"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSwitch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchCompat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/follow_color"
                        android:buttonTint="@color/follow_color"
                        android:checked="false"
                        android:textColor="@color/pref_sub_text"
                        android:theme="@style/switchStyle"
                        app:theme="@style/switchStyle"/>


                    <com.hadippa.CustomTextView
                        android:id="@+id/tvSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="Notify"
                        android:textColor="@color/c_908e8f"
                        android:textSize="@dimen/values_txt_10"
                        android:visibility="gone"
                        app:customFont="@string/proxima_reg"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/value_5"
        android:layout_marginTop="@dimen/value_10"
        android:background="@color/c_e3e3e3"
        android:visibility="visible"/>

    <com.hadippa.CustomTextView
        android:id="@+id/tvApprovedPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value_8"
        android:paddingLeft="@dimen/sign_up_padding"
        android:text="Approved People"
        android:textColor="@color/c_949293"
        android:textSize="@dimen/values_txt_10"
        android:visibility="visible"
        app:customFont="@string/proxima_reg"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sign_up_padding"
            android:layout_toLeftOf="@+id/vSep3"
            android:orientation="horizontal"
            android:visibility="visible">

        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/vSep3"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recyclerView"
            android:layout_alignTop="@+id/recyclerView"
            android:layout_marginLeft="@dimen/value_10"
            android:layout_toLeftOf="@+id/ivChat"
            android:background="@color/vsep_ligher"
            />

        <ImageView
            android:id="@+id/ivChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/value_10"
            android:paddingRight="@dimen/value_10"
          />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/value_10"
        android:background="@color/c_e3e3e3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_8"
        android:background="@color/c_f4f4f2"/>

</LinearLayout>


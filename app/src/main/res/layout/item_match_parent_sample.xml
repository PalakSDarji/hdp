<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    >

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        app:cardCornerRadius="10dp"
                                        android:background="@drawable/rounded_caard"
                                        app:cardElevation="0dp"
                                        card_view:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rounded_caard"
            android:padding="1dp"
            >

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:src="@drawable/deepu"
                android:layout_height="wrap_content"
                android:layout_above="@+id/llControls"
                android:background="@drawable/rounded_caard"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"/>
            <!--
                    </com.github.captain_miao.optroundcardview.OptRoundCardView>
            -->

            <LinearLayout
                android:id="@+id/llControls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layouttop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/layouttop1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/activityname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:drawableLeft="@drawable/landing_pages_movie_icon"
                            android:drawablePadding="10dp"
                            android:text="Sarabjit Movie"
                            android:textColor="@color/pink_text"
                            android:textSize="@dimen/card_title_textsize"
                            android:textStyle="bold"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:drawableLeft="@drawable/landing_pages_share"
                            android:drawablePadding="5dp"
                            android:text="100"
                            android:textColor="@color/subText"
                            android:textSize="@dimen/card_share_textsize"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layouttop1"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/card_event_margin_bottom"
                        android:layout_marginTop="@dimen/login_button_margin_bottom"
                        android:drawableLeft="@drawable/landing_pages_address_icon"
                        android:drawablePadding="5dp"
                        android:text="PVR Cinemas, Lower Parel, Mumbai"
                        android:textColor="@color/subText"
                        android:textSize="@dimen/card_title1_textsize"/>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/landing_pages_r2_29"
                        android:gravity="center"
                        android:text="04 May"
                        android:textSize="@dimen/tab_search_textsize"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/landing_pages_time"
                        android:gravity="center"
                        android:text="12.15 pm"
                        android:textSize="@dimen/tab_search_textsize"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"

                        android:drawableTop="@drawable/landing_pages_distance"
                        android:gravity="center"
                        android:text="10 Km"
                        android:textSize="@dimen/tab_search_textsize"/>


                    <TextView
                        android:id="@+id/tvFollowling"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="5dp"
                        android:drawableTop="@drawable/landing_pages_people"
                        android:gravity="center"
                        android:text="10 Going"
                        android:textSize="@dimen/tab_search_textsize"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/card_view_margin_vertical"
                    android:background="#d0d0d0"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/card_bottom_layer_vertical_padding"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Maria Sharopava, 29"
                        android:textSize="@dimen/card_bottom_text_size"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="FOLLOWLING"

                        android:textSize="@dimen/tab_search_padding_vertical">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/item_swipe_left_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:background="@drawable/like"/>

    <View
        android:id="@+id/item_swipe_right_indicator"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:alpha="0"
        android:background="@drawable/nope"/>

</FrameLayout>
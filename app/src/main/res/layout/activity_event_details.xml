<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_event_details"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.hadippa.activities.EventDetailsActivity">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/value_40"
            android:layout_height="@dimen/value_28"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/ic_back"/>

        <com.hadippa.CustomTextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/rell"
            android:layout_toRightOf="@+id/imageBack"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/event_name"
            android:textColor="@color/c_2f2f2f"
            android:textSize="@dimen/values_txt_16"
            app:customFont="@string/proxima_bold"/>


        <RelativeLayout
            android:layout_marginRight="@dimen/value_w17"
            android:id="@+id/rell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/inviteNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_chat"
                android:gravity="center"
                android:padding="3dp"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pink_text"
                android:textSize="@dimen/values_txt_10"/>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:id="@+id/llInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/value_w26"
                    android:layout_height="@dimen/value_w26"
                    android:src="@drawable/ic_invite"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/imageFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/invite"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/values_txt_10"
                    app:customFont="@string/proxima_reg"/>

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPost"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_h290"
                    android:clickable="false"
                    android:focusable="false"
                    android:padding="2dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="9dp"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpSlider"

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/value_h290"
                    android:background="@color/c_efefef"
                    android:visibility="gone">

                </android.support.v4.view.ViewPager>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#efefef"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_20">

                <com.hadippa.CustomTextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_20"
                    android:layout_toLeftOf="@+id/rlPrice"
                    android:text="Event Name"
                    android:textColor="@color/c_f31755"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_bold"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rlPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:minWidth="70dp"
                    android:paddingLeft="@dimen/value_10"
                    android:layout_marginRight="@dimen/value_10"
                    android:paddingRight="@dimen/value_10"
                    android:clickable="true">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Rs 2000"
                        android:textColor="#585858"
                        android:textSize="@dimen/values_txt_13"
                        app:customFont="@string/proxima_bold"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPrice"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="@string/details"
                        android:textColor="#585858"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_bold"/>

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/vSep5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/value_20"
                android:background="@color/vsep_ligher"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/totalInclude"
                android:paddingLeft="@dimen/value_20"
                android:paddingRight="@dimen/value_20"
               >

                <com.hadippa.CustomTextView
                    android:id="@+id/tvPriceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tvTotalPrice"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Total"
                    android:textColor="@color/c_454545"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_bold"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="INR 0"
                    android:textColor="@color/c_fd636b"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_bold"/>

            </RelativeLayout>            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/value_20"
                android:background="@color/vsep_ligher"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginRight="@dimen/value_20"
                android:layout_marginTop="@dimen/value_20">

                <ImageView
                    android:id="@+id/ivCal"
                    android:layout_width="@dimen/value_w26"
                    android:layout_height="@dimen/value_w26"
                    android:src="@drawable/landing_pages_r2_29"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_10"
                    android:layout_toLeftOf="@+id/rlCal"
                    android:layout_toRightOf="@+id/ivCal"
                    android:text="Wed, 12 Nov"
                    android:textColor="#585858"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_reg"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDate"
                    android:layout_marginLeft="@dimen/value_10"
                    android:layout_marginTop="@dimen/value_5"
                    android:layout_toLeftOf="@+id/rlCal"
                    android:layout_toRightOf="@+id/ivCal"
                    android:text="6 Pm to 12 Am"
                    android:textColor="#585858"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_reg"/>

                <RelativeLayout
                    android:id="@+id/rlCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_10">

                    <ImageView
                        android:id="@+id/ivCalender"
                        android:layout_width="@dimen/value_w26"
                        android:layout_height="@dimen/value_w26"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/my_plan_history"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvAddToCalender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivCalender"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/value_5"
                        android:text="Add To Calender"
                        android:textColor="#585858"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/value_20"
                android:background="@color/vsep_ligher"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginRight="@dimen/value_20"
                android:layout_marginTop="@dimen/value_20">

                <ImageView
                    android:id="@+id/ivLocation"
                    android:layout_width="@dimen/value_w26"
                    android:layout_height="@dimen/value_w26"
                    android:layout_centerVertical="true"
                    android:src="@drawable/landing_pages_distance"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/value_10"
                    android:layout_marginRight="@dimen/value_10"
                    android:layout_toLeftOf="@+id/rlKm"
                    android:layout_toRightOf="@+id/ivLocation"
                    android:text="Address"
                    android:textColor="#585858"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_reg"/>

                <RelativeLayout
                    android:id="@+id/rlKm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/value_20">

                    <ImageView
                        android:id="@+id/ivKm"
                        android:layout_width="@dimen/value_w26"
                        android:layout_height="@dimen/value_w26"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/my_plan_history"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivKm"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/value_5"
                        android:text="2 Km"
                        android:textColor="#585858"
                        android:textSize="@dimen/values_txt_10"
                        app:customFont="@string/proxima_reg"/>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/vSep1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/value_20"
                android:background="@color/vsep_ligher"
                android:visibility="gone"/>

            <com.hadippa.CustomTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginRight="@dimen/value_20"
                android:layout_marginTop="@dimen/value_20"
                android:text="Description"
                android:textColor="#585858"
                android:textSize="@dimen/values_txt_14"
                android:visibility="gone"
                app:customFont="@string/proxima_reg"/>

            <com.hadippa.CustomTextView
                android:id="@+id/tvDescriptionVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginRight="@dimen/value_20"
                android:layout_marginTop="@dimen/value_10"
                android:text="Description"
                android:textColor="#585858"
                android:textSize="@dimen/values_txt_12"
                android:visibility="gone"
                app:customFont="@string/proxima_reg"/>

            <View
                android:id="@+id/vSep2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/value_20"
                android:background="@color/vsep_ligher"/>

            <ImageView
                android:id="@+id/ivMoreDetail"
                android:layout_width="@dimen/value_w66"
                android:layout_height="@dimen/value_h48"
                android:layout_alignBaseline="@+id/vSep2"
                android:layout_below="@+id/rlGroupDetail"
                android:layout_gravity="center"
                android:layout_marginTop="-13dp"
                android:clickable="true"
                android:src="@drawable/group_chat_more"/>

            <com.hadippa.CustomTextView
                android:id="@+id/tvKnowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_5"
                android:text="@string/know_more"
                android:textColor="#35a8e6"
                android:textSize="@dimen/values_txt_10"
                app:customFont="@string/proxima_reg"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_h64"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:text="@string/select_date"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisitingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVisDate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h31"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Tap Here"
                        android:textColor="@color/c_454545"
                        android:textSize="@dimen/values_txt_16"
                        app:customFont="@string/proxima_bold"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tvVisitingDate"
                        android:layout_alignRight="@+id/tvVisitingDate"
                        android:layout_below="@+id/tvVisitingDate"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/c_e8e6e7"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:text="@string/select_time"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisitingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVisTime"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h31"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Tap Here"
                        android:textColor="@color/c_454545"
                        android:textSize="@dimen/values_txt_16"
                        app:customFont="@string/proxima_bold"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tvVisitingTime"
                        android:layout_alignRight="@+id/tvVisitingTime"
                        android:layout_below="@+id/tvVisitingTime"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/c_e8e6e7"
                        />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_h48">

                <com.hadippa.CustomTextView
                    android:id="@+id/tvAvailableTill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlAvaTill"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/value_w32"
                    android:layout_marginRight="@dimen/value_w32"
                    android:layout_marginTop="@dimen/value_h31"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="Tap here"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/c_454545"
                    android:textSize="@dimen/values_txt_16"
                    app:customFont="@string/proxima_bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/tvAvailableTill"
                    android:layout_alignRight="@+id/tvAvailableTill"
                    android:layout_below="@+id/tvAvailableTill"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@color/c_e8e6e7"
                    />

                <LinearLayout
                    android:id="@+id/rlAvaTill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvAvaTill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:text="@string/available_till"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"/>

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/available_till_arrow"
                        android:visibility="gone"/>

                </LinearLayout>


            </RelativeLayout>

            <com.hadippa.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginTop="@dimen/value_h64"
                android:text="@string/hide_post_from"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/values_txt_16"
                app:customFont="@string/proxima_reg"/>

            <LinearLayout
                android:id="@+id/radioSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_20"
                android:layout_marginTop="@dimen/value_h15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPublicAndFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_5"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/value_h15"
                    android:paddingTop="@dimen/value_h15">

                    <ImageView
                        android:id="@+id/radio0"
                        style="@style/radio_style"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"
                        android:background="@drawable/custom_radio"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:clickable="false"/>

                    <com.hadippa.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/public_following"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_11"
                        app:customFont="@string/proxima_reg"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_5"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/value_h15"
                    android:paddingTop="@dimen/value_h15">

                    <ImageView
                        android:id="@+id/radio1"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"
                        android:layout_marginLeft="@dimen/value_w17"
                        android:background="@drawable/custom_radio"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:clickable="false"/>

                    <com.hadippa.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="@string/following"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_11"
                        app:customFont="@string/proxima_reg"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/value_h15"
                    android:paddingTop="@dimen/value_h15">

                    <ImageView
                        android:id="@+id/radio2"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"
                        android:layout_marginLeft="@dimen/value_w17"
                        android:background="@drawable/custom_radio"
                        android:button="@android:color/transparent"
                        android:checked="true"
                        android:clickable="false"/>

                    <com.hadippa.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

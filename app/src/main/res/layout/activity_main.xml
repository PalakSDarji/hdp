<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:background="#ffffff"   android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/drawerOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/drawerOpen"
                android:padding="5dp"
                android:src="@drawable/signup_hlogo" />

            <FrameLayout
                android:id="@+id/relChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/landing_pages_chat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="end|top"
                    android:background="@drawable/rounded_chat"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/pink_text"
                    android:textSize="5dp" />

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/relChat"
                android:padding="7.5dp"
                android:id="@+id/imageFilter"
                android:src="@drawable/landing_pages_filter" />

            <EditText
                android:layout_width="@dimen/tab_search_text_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_edittext_search"
                android:drawableRight="@drawable/ic_search"
                android:hint="@string/search"
                android:focusable="false"
                android:id="@+id/edtSearch"
                android:paddingBottom="@dimen/tab_search_padding_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="@dimen/tab_search_padding_vertical"
                android:textColor="#fa4c54"
                android:textSize="@dimen/tab_search_textsize" />
        </RelativeLayout>


        <View
            android:id="@+id/view"
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/view_sepe"></View>

        <FrameLayout
            android:layout_below="@+id/view"
            android:background="@color/white"
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           >

        </FrameLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="@dimen/home_drawer_item_width"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white"
      >


        <RelativeLayout
            android:id="@+id/topDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >


            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">


                <LinearLayout
                    android:id="@+id/linearProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/purple"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageButton
                        android:id="@+id/profileImage"
                        android:layout_width="@dimen/home_drawer_profile_image_width"
                        android:layout_height="@dimen/home_drawer_profile_image_height"
                        android:layout_marginBottom="@dimen/home_drawer_profile_image_margin_bottom"
                        android:layout_marginTop="@dimen/home_drawer_profile_image_margin_top"
                        android:background="@drawable/rounded__drawer_dp"
                        android:src="@drawable/ic_user_avatar_default" />


                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/home_drawer_username_margin_bottom"

                        android:text="Shalu Soni"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/home_drawer_username_textsize"
                        android:textStyle="bold" />
                </LinearLayout>

          </LinearLayout>

            <LinearLayout
android:layout_marginTop="@dimen/home_drawer_post_margin_top"
                android:layout_width="match_parent"
                android:layout_below="@+id/profile"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:background="@drawable/pinkborder_whitebg"
                    android:textSize="@dimen/home_drawer_title_1"
                    android:paddingTop="@dimen/home_drawer_title1_padding_vertical"
                    android:paddingBottom="@dimen/home_drawer_title1_padding_vertical"
                    android:paddingLeft="@dimen/home_drawer_title1_padding_horizontal"
                    android:paddingRight="@dimen/home_drawer_title1_padding_horizontal"
                    android:drawableLeft="@drawable/ic_post"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/home_drawer_title1_drawable_padding"
                    android:gravity="center"
                    android:textColor="@color/pink_text"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/home_drawer_title1_margin_bottom"
                    android:text="@string/post"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/home_drawer_view_margin_bottom"
                    android:layout_marginLeft="@dimen/home_drawer_side_margins"
                    android:layout_marginRight="@dimen/home_drawer_side_margins"
                    android:background="@color/subText"></View>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginBottom="@dimen/home_drawer_option2_margin_bottom"
                    android:id="@+id/linearHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/home_drawer_menu_left_margins">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/home"
                        android:textColor="@color/purple"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/home_drawer_menu_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/home_drawer_option2_margin_bottom"
                    android:id="@+id/linearNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/home_drawer_menu_left_margins">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_notification" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/notification"
                        android:textColor="@color/purple"

                        android:gravity="center_vertical"
                        android:textSize="@dimen/home_drawer_menu_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/home_drawer_option2_margin_bottom"
                    android:id="@+id/linearPreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/home_drawer_menu_left_margins">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_prefrences" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/preference"
                        android:textColor="@color/purple"

                        android:gravity="center_vertical"
                        android:textSize="@dimen/home_drawer_menu_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/home_drawer_option2_margin_bottom"
                    android:id="@+id/linearFollowling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/home_drawer_menu_left_margins">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_following" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="@string/followling"
                        android:textColor="@color/purple"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/home_drawer_menu_text_size">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearFeedback"
                    android:layout_marginBottom="@dimen/home_drawer_option4_margin_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/home_drawer_menu_left_margins">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_feedback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="20dp"
                        android:text="@string/feedback_suggestion"
                        android:textColor="@color/purple"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/home_drawer_menu_text_size" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/pinkborder_whitebg"
                android:paddingTop="@dimen/logout_padding_vertical"
                android:paddingBottom="@dimen/logout_padding_vertical"
                android:paddingLeft="@dimen/home_drawer_side_margins"
                android:paddingRight="@dimen/home_drawer_side_margins"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/logout_margin_bottom"
                android:layout_centerHorizontal="true"
                android:textColor="@color/pink_text"
                android:textSize="@dimen/home_drawer_menu_text_size"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="@string/logout"/>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
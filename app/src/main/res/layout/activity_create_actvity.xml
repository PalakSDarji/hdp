<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_create_actvity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.hadippa.activities.CreateActivityActvity">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="@dimen/value_40"
            android:layout_height="@dimen/value_28"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/ic_back"/>

        <com.hadippa.CustomTextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/rell"
            android:layout_toRightOf="@+id/imageBack"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/create_activity"
            android:textColor="@color/c_2f2f2f"
            android:textSize="@dimen/values_txt_16"
            app:customFont="@string/proxima_bold"/>

        <!--<RelativeLayout
            android:id="@+id/rell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/value_w17">
-->
        <RelativeLayout
            android:id="@+id/rell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:id="@+id/llInvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingRight="3dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="@dimen/value_w26"
                    android:layout_height="@dimen/value_w26"
                    android:src="@drawable/ic_invite"/>

                <com.hadippa.CustomTextView
                    android:id="@+id/imageFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/invite"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/values_txt_10"
                    app:customFont="@string/proxima_reg"/>

            </LinearLayout>

            <TextView
                android:id="@+id/inviteNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/llInvite"
                android:background="@drawable/rounded_chat"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/pink_text"
                android:textSize="@dimen/values_txt_10"/>
        </RelativeLayout>
        <!--</RelativeLayout>-->
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/top"
        android:background="@drawable/header_gredient"/>

    <com.hadippa.CustomTextView
        android:id="@+id/tvPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/c_fd636b"
        android:gravity="center"
        android:padding="@dimen/value_h31"
        android:text="@string/post"
        android:textColor="@android:color/white"
        android:textSize="@dimen/values_txt_18"
        app:customFont="@string/proxima_bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/value_w29"
            android:paddingRight="@dimen/value_w29"
            android:paddingTop="@dimen/value_h38">

            <android.support.v7.widget.CardView
                android:id="@+id/cvVisitingCard"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_h290"
                android:visibility="visible"
                card_view:cardBackgroundColor="@null"
                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/profileImage"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:focusable="false"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/foof"
                        app:riv_corner_radius="9dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_rounded_trans_black"
                        />

                    <RelativeLayout
                        android:id="@+id/linearData"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/value_w32"
                        android:paddingLeft="@dimen/value_w32"
                        android:paddingRight="@dimen/value_w32">


                        <com.hadippa.CustomTextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="7dp"
                            android:layout_toLeftOf="@+id/rating"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:maxWidth="@dimen/value_w470"
                            android:text="Amigos Cafe"
                            android:textColor="@color/white"
                            android:textSize="@dimen/values_txt_13"
                            app:customFont="@string/proxima_bold"/>

                        <com.hadippa.CustomTextView
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/name"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/value_w17"
                            android:background="@drawable/rounded_following_parrot"
                            android:gravity="center"
                            android:paddingBottom="@dimen/value_h10"
                            android:paddingLeft="@dimen/value_w17"
                            android:paddingRight="@dimen/value_w17"
                            android:paddingTop="@dimen/value_h10"
                            android:text="@string/star"
                            android:textColor="@color/white"
                            android:textSize="@dimen/values_txt_13"
                            app:customFont="@string/proxima_reg"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/name"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/llKms"
                            android:orientation="vertical">


                            <com.hadippa.CustomTextView
                                android:id="@+id/type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Nightclub"
                                android:textColor="@color/white"
                                android:textSize="@dimen/values_txt_10"
                                app:customFont="@string/proxima_reg"/>

                            <com.hadippa.CustomTextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/value_20"
                                android:layout_marginTop="3dp"
                                android:text="Bandra, Mumbai"
                                android:textColor="@color/white"
                                android:textSize="@dimen/values_txt_10"
                                app:customFont="@string/proxima_reg"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llKms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/name"
                            android:layout_centerVertical="true"
                            android:gravity="end"
                            android:orientation="vertical">

                            <com.hadippa.CustomTextView

                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="1 Km"
                                android:textColor="@color/white"
                                android:textSize="@dimen/values_txt_10"
                                app:customFont="@string/proxima_reg"/>

                            <com.hadippa.CustomTextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text="8 Pm to 1 am"
                                android:textColor="@color/white"
                                android:textSize="@dimen/values_txt_10"
                                app:customFont="@string/proxima_reg"/>

                        </LinearLayout>

                    </RelativeLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/llActivityBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_visiting_activity"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/value_h10">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h27"
                        android:layout_toLeftOf="@+id/imageArrow"
                        android:gravity="center"
                        android:text="Activity"
                        android:textColor="@color/c_605e5f"
                        android:textSize="@dimen/values_txt_18"
                        app:customFont="@string/proxima_reg"/>

                    <ImageView
                        android:id="@+id/imageArrow"
                        android:layout_width="@dimen/value_40"
                        android:layout_height="@dimen/value_28"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:src="@drawable/ic_back"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h27"
                        android:layout_toRightOf="@+id/imageArrow"
                        android:gravity="center"
                        android:text="Activity"
                        android:textColor="@color/c_605e5f"
                        android:textSize="@dimen/values_txt_18"
                        app:customFont="@string/proxima_reg"/>

                </RelativeLayout>

                <com.hadippa.CustomTextView
                    android:id="@+id/tvBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/value_h27"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/value_w32"
                    android:paddingRight="@dimen/value_w32"
                    android:text="Address"
                    android:textColor="@color/c_605e5f"
                    android:textSize="@dimen/values_txt_12"
                    app:customFont="@string/proxima_reg"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/llNameAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <com.hadippa.CustomTextView
                    android:id="@+id/tvActivityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_w32"
                    android:layout_marginRight="@dimen/value_w32"
                    android:layout_marginTop="@dimen/value_h21"
                    android:text="@string/name_of_the_activity"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_reg"/>

                <com.hadippa.CustomEditText
                    android:id="@+id/etActivityName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_w32"
                    android:layout_marginRight="@dimen/value_w32"
                    android:layout_marginTop="@dimen/value_h31"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Walk on beach"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/values_txt_16"
                    app:customFont="@string/proxima_bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/c_e8e6e7"
                    />

                <com.hadippa.CustomTextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_w32"
                    android:layout_marginRight="@dimen/value_w32"
                    android:layout_marginTop="@dimen/value_h64"
                    android:text="@string/address"
                    android:textColor="@color/c_464646"
                    android:textSize="@dimen/values_txt_14"
                    app:customFont="@string/proxima_reg"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/value_w32"
                    android:layout_marginRight="@dimen/value_w17"
                    android:layout_marginTop="@dimen/value_h31">


                    <fragment

                        android:id="@+id/place_autocomplete_fragment"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_toLeftOf="@+id/ivLocation"
                        />

                    <com.hadippa.CustomEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/ivLocation"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"
                        />

                    <ImageView
                        android:id="@+id/ivLocation"
                        android:layout_width="@dimen/value_w43"
                        android:layout_height="@dimen/value_h31"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/location_map"/>
                </RelativeLayout>

                <View
                    android:id="@+id/vSepAddress"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/c_e8e6e7"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_h64"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:text="@string/visiting_time"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisitingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVisDate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h31"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint="@string/date"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/c_454545"
                        android:textSize="@dimen/values_txt_16"
                        app:customFont="@string/proxima_bold"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tvVisitingDate"
                        android:layout_alignRight="@+id/tvVisitingDate"
                        android:layout_below="@+id/tvVisitingDate"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/c_e8e6e7"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:text="@string/visiting_time"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_14"
                        app:customFont="@string/proxima_reg"/>

                    <com.hadippa.CustomTextView
                        android:id="@+id/tvVisitingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvVisTime"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/value_w32"
                        android:layout_marginRight="@dimen/value_w32"
                        android:layout_marginTop="@dimen/value_h31"
                        android:background="@android:color/transparent"
                        android:ellipsize="end"
                        android:hint="@string/time"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/c_454545"
                        android:textSize="@dimen/values_txt_16"
                        app:customFont="@string/proxima_bold"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignLeft="@+id/tvVisitingTime"
                        android:layout_alignRight="@+id/tvVisitingTime"
                        android:layout_below="@+id/tvVisitingTime"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@color/c_e8e6e7"
                        />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/value_h48">

                <RelativeLayout
                    android:id="@+id/rlAvaTill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.hadippa.CustomTextView
                            android:id="@+id/tvAvaTill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/value_w32"
                            android:layout_marginRight="@dimen/value_w32"
                            android:text="@string/available_till"
                            android:textColor="@color/c_464646"
                            android:textSize="@dimen/values_txt_14"
                            android:visibility="visible"
                            app:customFont="@string/proxima_reg"/>

                        <Spinner
                            android:id="@+id/spnAvail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/value_w32"
                            android:layout_marginRight="@dimen/value_w32"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textColor="@color/c_464646"
                            android:textSize="@dimen/values_txt_14"
                            android:visibility="visible">

                        </Spinner>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/ivArrow"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/rlSpinner"
                        android:src="@drawable/available_till_arrow"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/tvAvailableTill"
                    android:layout_alignRight="@+id/tvAvailableTill"
                    android:layout_below="@+id/tvAvailableTill"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:background="@color/c_e8e6e7"
                    />

                <com.hadippa.CustomTextView
                    android:id="@+id/tvAvailableTill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rlAvaTill"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/value_h31"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:hint="Tap here"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/c_454545"
                    android:textSize="@dimen/values_txt_16"
                    app:customFont="@string/proxima_bold"/>


            </RelativeLayout>

            <com.hadippa.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_h64"
                android:text="@string/hide_post_from"
                android:textColor="@color/c_464646"
                android:textSize="@dimen/values_txt_16"
                app:customFont="@string/proxima_reg"/>

            <LinearLayout
                android:id="@+id/radioSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_h15"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llPublicAndFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_5"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/value_h15"
                    android:paddingTop="@dimen/value_h15">

                    <ImageView
                        android:id="@+id/radio0"
                        style="@style/radio_style"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"
                        android:background="@drawable/custom_radio"
                        android:button="@android:color/transparent"
                        android:checked="false"
                        android:clickable="false"/>

                    <com.hadippa.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/public_following"
                        android:textColor="@color/c_464646"
                        android:textSize="@dimen/values_txt_11"
                        app:customFont="@string/proxima_reg"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/value_5"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/value_h15"
                    android:paddingTop="@dimen/value_h15">

                    <ImageView
                        android:id="@+id/radio1"
                        android:layout_width="@dimen/value_w36"
                        android:layout_height="@dimen/value_w36"

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/sliding_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoOverlay="false"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="4dp">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HomeScreen">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:fab="http://schemas.android.com/apk/res-auto"
                        xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:context="com.hadippa.fragments.main_screen.ShowCards">

            <RelativeLayout
                android:id="@+id/relBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:layout_width="@dimen/card_bottom_drawer"
                    android:layout_height="@dimen/card_bottom_drawer"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bottom_menu_side_margin"
                    android:layout_marginRight="@dimen/logout_padding_vertical"
                    android:layout_toLeftOf="@+id/linearCenter"
                    android:background="@drawable/rounded_small"
                    android:src="@drawable/landing_pages_refresh"/>

                <LinearLayout
                    android:id="@+id/linearCenter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/imageLeft"
                        android:layout_width="@dimen/card_bottom_center"
                        android:layout_height="@dimen/card_bottom_center"
                        android:layout_marginRight="@dimen/home_drawer_title1_drawable_padding"
                        android:background="@drawable/rounded"
                        android:src="@drawable/landing_pages_reject"/>

                    <ImageButton
                        android:id="@+id/imageRight"
                        android:layout_width="@dimen/card_bottom_center"
                        android:layout_height="@dimen/card_bottom_center"
                        android:layout_marginLeft="@dimen/home_drawer_title1_drawable_padding"
                        android:background="@drawable/rounded"
                        android:src="@drawable/landing_pages_accept"/>

                </LinearLayout>

                <!--  <fabspeeddial.FabSpeedDial
                      android:id="@+id/fab1"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/logout_padding_vertical"
                      android:layout_marginRight="@dimen/bottom_menu_side_margin"

                      app:fabGravity="bottom_end"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      app:fabMenu="@menu/menu_fab"
                      app:fabBackgroundTint="@color/colorAccent"
                      app:miniFabBackgroundTint="@android:color/transparent"
                      app:miniFabDrawableTint="@android:color/white"
                      app:miniFabTitleTextColor="#0fe"
                      android:background="@drawable/rounded_small"
                      android:src="@drawable/landing_pages_events" />
      -->

                <RelativeLayout
                    android:id="@+id/rlFix"
                    android:layout_width="@dimen/card_bottom_drawer"
                    android:layout_height="@dimen/card_bottom_drawer"
                    android:layout_alignBottom="@+id/linearCenter"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/logout_padding_vertical"
                    android:layout_marginRight="@dimen/bottom_menu_side_margin"
                    android:layout_toRightOf="@+id/linearCenter"
                    >

                    <ImageButton
                        android:id="@+id/imageOptions"
                        android:layout_width="@dimen/card_bottom_drawer"
                        android:layout_height="@dimen/card_bottom_drawer"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/bottom_menu_side_margin"
                        android:background="@drawable/rounded_small"
                        android:src="@drawable/landing_pages_events"/>

                </RelativeLayout>

            </RelativeLayout>


            <com.hadippa.tindercard.SwipeFlingAdapterView
                android:id="@+id/frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/relBottom"
                app:rotation_degrees="10.0"
                tools:context=".HomeScreen"/>


        </RelativeLayout>

        <View
            android:id="@+id/mapCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/slidingpanel_height">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="People Going alone"
            android:layout_margin="10dp"
            android:id="@+id/tvPp"
            android:gravity="center"
            android:textColor="@color/pink_text"
            android:textSize="@dimen/card_title_textsize"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:background="#fff"
            android:layout_below="@+id/tvPp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>
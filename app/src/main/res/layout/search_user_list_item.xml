<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/value_8"
              android:paddingTop="@dimen/value_8"
              android:paddingLeft="@dimen/sign_up_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profileImage"
            android:layout_width="@dimen/value_w85"
            android:layout_height="@dimen/value_w85"
            android:background="@drawable/profile_bg"
            app:riv_border_color="@color/c_b7b3b4"
            app:riv_border_width="@dimen/value_1"
            android:src="@drawable/ic_avatar5"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/value_5"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textview_or_margin_top"
            android:layout_toRightOf="@+id/profileImage"
            android:orientation="vertical">

            <com.hadippa.CustomTextView
                app:customFont="@string/proxima_reg"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Beckham"
                android:textColor="#464646"
                android:maxLines="1"
                android:singleLine="false"
                android:ellipsize="end"
                android:textSize="@dimen/values_txt_13"
                android:textStyle="bold"/>

            <com.hadippa.CustomTextView
                app:customFont="@string/proxima_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Footballer"
                android:textColor="#9b9697"
                android:maxLines="1"
                android:singleLine="false"
                android:ellipsize="end"
                android:textSize="@dimen/values_txt_11"
                android:layout_marginTop="@dimen/value_2"
                android:visibility="visible"/>

        </LinearLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvPickId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingTop="@dimen/sign_up_padding"
    android:paddingBottom="@dimen/sign_up_padding"
    android:paddingLeft="@dimen/sign_up_padding">


    <RelativeLayout
        android:layout_width="@dimen/follow_width_layout_1"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:background="@drawable/rounded_caard"
            android:layout_width="@dimen/list_image_dimen"
            android:layout_height="@dimen/list_image_dimen"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avatar1"
                    android:id="@+id/profileImage"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_marginLeft="@dimen/textview_or_margin_top"
            android:layout_toRightOf="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textColor="#464646"
                android:textStyle="bold"
                android:textSize="@dimen/card_bottom_text_size"
                android:text="David Beckham"/>

            <TextView
                android:textColor="#9b9697"
                android:textSize="@dimen/tab_search_padding_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Footballer"/>

        </LinearLayout>




    </RelativeLayout>


    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvId"/>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPickId"/>

</LinearLayout>
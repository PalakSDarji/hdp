<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/value_12"
                android:paddingLeft="@dimen/value_20"
                android:paddingRight="@dimen/value_20"
                android:paddingTop="@dimen/value_12">

    <com.hadippa.CustomTextView
        android:id="@+id/tvPriceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tvTotalPrice"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Total"
        android:textColor="@color/c_454545"
        android:textSize="@dimen/values_txt_14"
        app:customFont="@string/proxima_bold"/>

    <com.hadippa.CustomTextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="INR 2000"
        android:textColor="@color/c_fd636b"
        android:textSize="@dimen/values_txt_14"
        app:customFont="@string/proxima_bold"/>

</RelativeLayout>
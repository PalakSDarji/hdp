<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
                android:paddingRight="@dimen/sign_up_padding"
              android:paddingBottom="@dimen/sign_up_padding"
              android:paddingLeft="@dimen/sign_up_padding"
              android:paddingTop="@dimen/sign_up_padding">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="@dimen/list_image_dimen"
            android:layout_height="@dimen/list_image_dimen"
            android:background="@drawable/rounded_caard"
            card_view:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avatar1"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/textview_or_margin_top"
            android:layout_toRightOf="@+id/card"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Beckham"
                android:textColor="#464646"
                android:textSize="@dimen/or_text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Footballer"
                android:textColor="#9b9697"
                android:textSize="@dimen/font_follower_subtext"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvFollowUnfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/rounded_followers"
        android:drawableLeft="@drawable/ic_user_follow"
        android:gravity="center"
        android:paddingBottom="@dimen/tab_search_padding_vertical"
        android:paddingLeft="@dimen/pref_card_sub_title_size"
        android:paddingRight="@dimen/pref_card_sub_title_size"
        android:paddingTop="@dimen/tab_search_padding_vertical"
        android:text="@string/followers"
        android:textColor="@color/follow_color"
        android:textSize="@dimen/or_text_size"/>
